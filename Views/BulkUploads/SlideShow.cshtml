@model IEnumerable<ApartmentsRUS.Models.BulkUpload>

@{
    ViewBag.Title = "SlideShow";
}

<h2>Bulk Uploaded Images</h2>


<div id="bulkLoad" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    @{
        var j = 0;
    }
    <ol class="carousel-indicators">
        @foreach (var item in Model)
        {
            if (item.imageUrl == null)
            {
                continue;
            }
            if (j == 0)  // the first one needs the 'active' class
            {
                <li data-target="#bulkLoad" data-slide-to="@j" class="active"></li>

            }
            else
            {
                <li data-target="#bulkLoad" data-slide-to="@j"></li>

            }
            j++;
        }
    </ol>
    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        @{
            string status = "active";
        }
        @foreach (var item in Model)
        {
            if (item.imageUrl == null)
            {
                continue;
            }
            <div class="item @status">
                @{
                    status = "";
                }
                <img src="@Url.Content("~/BulkUploaded/")@item.imageUrl" width="800" style="padding-left:100px"  />

            </div>
        }

    </div>
    <a class="left carousel-control" href="#bulkLoad" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#bulkLoad" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


