@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <div class="list-group" >
            <ul class="nav navbar-nav navbar-right">
                <li>
                    @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null,
                        htmlAttributes: new { title = "Manage", @class = "list-group-item list-group-item-info" })
                </li>
                <li>
                    @Html.ActionLink("Registered Users", "index", "registeredUsers", routeValues: null,
                        htmlAttributes: new { title = "Manage", @class = "list-group-item list-group-item-info" })
                </li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()" class="list-group-item list-group-item-info">Log off</a></li>
            </ul>
        </div>
    }
}
else
{
    @Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "list-group-item list-group-item-info" })
    @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "list-group-item list-group-item-info" })
}
