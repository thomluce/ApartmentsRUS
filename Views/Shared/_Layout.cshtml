<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title = Apartments-R-Us</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>

    <div class="row">
        <div  class="col-mid-12" style="padding-left:20px">
            <img src="~/Images/ApartmentsRUSlogo.jpg" width="200px"/>"
        </div>
    </div>

    <div class="row">
        <div class="col-md-2" style="padding-left:40px">
            <div class="list-group" style="padding-top:50px">
                @*<ul class="list-group">*@
                @Html.ActionLink("Home", "Index", "Home")<br />
                @Html.ActionLink("About", "About", "Home")<br />
                @Html.ActionLink("Owners", "Index", "Owners")<br />
                @Html.ActionLink("Investors", "Index", "Investors")<br />
                @Html.ActionLink("Buildings", "Index", "Buildings")<br />
                @Html.ActionLink("Apartments", "Index", "Apartments")<br />
                @Html.ActionLink("Leases", "Index", "Leases")<br />
                @Html.ActionLink("Renters", "Index", "Renters")<br />
                @Html.ActionLink("Bulk Upload", "Index", "BulkUploads")<br /><br />

                @*</ul>*@
                @Html.Partial("_LoginPartial")
            </div>
        </div>
        <div class="col-md-10">
            <div class="container body-content">
                <br />
                @RenderBody()
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12"  style="padding-left:20px">
            <p>&copy; @DateTime.Now.Year - Applications-R-US</p>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
